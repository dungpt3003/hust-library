%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:surveys, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:surveys, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:surveys, :edit, :id => @survey.id)

.tabs-content
  = form_for :survey, url(:surveys, :update, :id => @survey.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'surveys/form', :locals => { :f => f }
