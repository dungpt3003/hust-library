- error = @advice.errors.key?(:content) && @advice.errors[:content].count > 0
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :content, :class => 'control-label'
  .controls
    ~f.text_area :content, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:content, :class => 'text-error') : pat(:example)

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:advices, :index), :class => 'btn btn-default'