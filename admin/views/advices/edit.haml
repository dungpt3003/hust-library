%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:advices, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:advices, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:advices, :edit, :id => @advice.id)

.tabs-content
  = form_for :advice, url(:advices, :update, :id => @advice.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'advices/form', :locals => { :f => f }
