%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:answers, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:answers, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon('check-square-o', pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon('square-o', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon('trash-o', pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:answers, :destroy_many), :method => :delete do
                      =hidden_field_tag :answer_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:answer, :id)
        %th.header= mat(:answer, :question_id)
        %th.header= mat(:answer, :library_id)
        %th.header= mat(:answer, :user_name)
        %th.header= mat(:answer, :user_role)
        %th.header= mat(:answer, :min_score)
        %th.header= mat(:answer, :per_score)
        %th.header= mat(:answer, :des_score)
        %th.header.list-row-action-header

    %tbody
      -@answers.each do |answer|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'answer_ids[]', :value => answer.id, :class => 'list-selectable-checkbox'
          %td.list-column=answer.id
          %td.list-column=answer.question_id
          %td.list-column=answer.library_id
          %td.list-column=answer.user_name
          %td.list-column=answer.user_role
          %td.list-column=answer.min_score
          %td.list-column=answer.per_score
          %td.list-column=answer.des_score
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:answers, :edit, :id => answer.id), :rel => :tooltip, :title => "#{pat(:edit)} answer", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon('trash-o'), :rel => :tooltip, :title => "#{pat(:delete)} answer", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "answer")
                .popover-content
                  = form_tag url(:answers, :destroy, :id => answer.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
